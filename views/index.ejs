<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Day's Checker</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }
        .calendar {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 10px;
            width: 80%;
            max-width: 600px;
        }
        .day {
            padding: 20px;
            border: 1px solid #ccc;
            text-align: center;
        }
        .today {
            background-color: #f0f8ff;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1><%= message %></h1>
    <p><%= advice %></p>
    <div class="calendar">
        <% weekDays.forEach((dayInfo, index) => { %>
            <div class="day <%= index === new Date().getDay() ? 'today' : '' %>">
                <h2><%= dayInfo.day %></h2>
                <p><%= dayInfo.message %></p>
                <p><%= dayInfo.advice %></p>
            </div>
        <% }) %>
    </div>
</body>
</html>
